.signup-container
  .registration-header
    = render partial: 'registration-header'
    .progress-bar
      %ol
        %li.progress-bar__list
          会員情報
          .progress-status#red
          .progress-status__bar-right#red
        %li.progress-bar__list
          電話番号認証
          .progress-status#red
          .progress-status__bar-left#red
          .progress-status__bar-right#red
        %li.progress-bar__list#current-page
          お届け先住所入力
          .progress-status#red
          .progress-status__bar-left#red
          .progress-status__bar-right
        %li.progress-bar__list
          支払い方法
          .progress-status
          .progress-status__bar-left
          .progress-status__bar-right
        %li.progress-bar__list
          完了
          .progress-status
          .progress-status__bar-left
  .registration-main
    .registration-main__head
      %h2
        住所入力
    .registration-main__inner
      .form.registration-form
        .registration-form__group
          %label{for: "name"} お名前
          %span.require 必須
          %input{type: "text", name: 'family_name', placeholder: '例) 山田', class: 'registration-form__input'}
          %input{type: "text", name: 'first_name', placeholder: '例) 彩', class: 'registration-form__input'}
        .registration-form__group
          %label{for: "name"} お名前カナ
          %span.require 必須
          %input{type: "text", name: 'family_name_kana', placeholder: '例) ヤマダ', class: 'registration-form__input'}
          %input{type: "text", name: 'first_name_kana', placeholder: '例) アヤ', class: 'registration-form__input'}
        .registration-form__group
          %label{for: "postal_code"} 郵便番号
          %span.require 必須
          %input{type: "text", name: 'postal_code', placeholder: '例) 123-4567', class: 'registration-form__input'}
        .registration-form__group
          %label{for: "prefecture"} 都道府県
          %span.require 必須
          .registration-form__select
            .registration-form__select__wrap.select-prefecture
              %select{name: 'prefecture', class: 'select'}
                %option{value: "北海道"} 北海道
                %option{value: "青森"} 青森
                %option{value: "岩手"} 岩手
                %option{value: "宮城"} 宮城
                %option{value: "秋田"} 秋田
                %option{value: "山形"} 山形
                %option{value: "福島"} 福島
                %option{value: "茨城"} 茨城
                %option{value: "栃木"} 栃木
                %option{value: "群馬"} 群馬
                %option{value: "埼玉"} 埼玉
                %option{value: "千葉"} 千葉
                %option{value: "東京"} 東京
                %option{value: "神奈川"} 神奈川
                %option{value: "新潟"} 新潟
                %option{value: "富山"} 富山
                %option{value: "石川"} 石川
                %option{value: "福井"} 福井
                %option{value: "山梨"} 山梨
                %option{value: "長野"} 長野
                %option{value: "岐阜"} 岐阜
                %option{value: "静岡"} 静岡
                %option{value: "愛知"} 愛知
                %option{value: "三重"} 三重
                %option{value: "滋賀"} 滋賀
                %option{value: "京都"} 京都
                %option{value: "大阪"} 大阪
                %option{value: "兵庫"} 兵庫
                %option{value: "奈良"} 奈良
                %option{value: "和歌山"} 和歌山
                %option{value: "鳥取"} 鳥取
                %option{value: "島根"} 島根
                %option{value: "岡山"} 岡山
                %option{value: "広島"} 広島
                %option{value: "山口"} 山口
                %option{value: "徳島"} 徳島
                %option{value: "香川"} 香川
                %option{value: "愛媛"} 愛媛
                %option{value: "高知"} 高知
                %option{value: "福岡"} 福岡
                %option{value: "佐賀"} 佐賀
                %option{value: "長崎"} 長崎
                %option{value: "熊本"} 熊本
                %option{value: "和歌山"} 和歌山
                %option{value: "大分"} 大分
                %option{value: "宮崎"} 宮崎
                %option{value: "鹿児島"} 鹿児島
                %option{value: "沖縄"} 沖縄
              = icon 'fas', 'chevron-down'
        .registration-form__group
          %label{for: "city"} 市区町村
          %span.require 必須
          %input{type: "text", name: 'city', placeholder: '例) 横浜市緑区', class: 'registration-form__input'}
        .registration-form__group
          %label{for: "street_adress"} 番地
          %span.require 必須
          %input{type: "text", name: 'street_adress', placeholder: '例) 青山1-1-1', class: 'registration-form__input'}
        .registration-form__group
          %label{for: "building"} 建物名
          %span.require 必須
          %input{type: "text", name: 'building', placeholder: '例) 柳ビル103', class: 'registration-form__input'}
        .registration-form__group
          %label{for: "phone_number"} 電話番号
          %span.require 必須
          %input{type: "text", name: 'phone_number', placeholder: '例) 09012345678', class: 'registration-form__input'}
        %button{type: 'submit', class: 'registration-form__btn'}
          次へ進む
  = render partial: 'signup-footer'

