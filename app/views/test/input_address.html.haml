.signup-container
  .registration-header
    = render partial: 'shared/registration-header'
    .progress-bar
      %ol
        %li.through
          会員情報
          .progress-status
        %li.through
          電話番号認証
          .progress-status
        %li.current-page
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  .registration-main
    %h2.registration-main__head--adress
      住所入力
    .registration-main__inner
      .form.registration-form
        .registration-form__group
          %label{for: "name"} お名前
          %span.require 必須
          %input{type: "text", name: 'family_name', placeholder: '例) 山田', class: 'input-default'}
          %input{type: "text", name: 'first_name', placeholder: '例) 彩', class: 'input-default'}
        .registration-form__group
          %label{for: "name"} お名前カナ
          %span.require 必須
          %input{type: "text", name: 'family_name_kana', placeholder: '例) ヤマダ', class: 'input-default'}
          %input{type: "text", name: 'first_name_kana', placeholder: '例) アヤ', class: 'input-default'}
        .registration-form__group
          %label{for: "postal_code"} 郵便番号
          %span.require 必須
          %input{type: "text", name: 'postal_code', placeholder: '例) 123-4567', class: 'input-default'}
        .registration-form__group
          %label{for: "prefecture"} 都道府県
          %span.require 必須
          .registration-form__select
            .registration-form__select__wrap.select-prefecture
              = collection_select :address, :prefecture_id, Prefecture.all, :id, :name
              = icon 'fas', 'chevron-down'
        .registration-form__group
          %label{for: "city"} 市区町村
          %span.require 必須
          %input{type: "text", name: 'city', placeholder: '例) 横浜市緑区', class: 'input-default'}
        .registration-form__group
          %label{for: "street_adress"} 番地
          %span.require 必須
          %input{type: "text", name: 'street_adress', placeholder: '例) 青山1-1-1', class: 'input-default'}
        .registration-form__group
          %label{for: "building"} 建物名
          %span.optional 任意
          %input{type: "text", name: 'building', placeholder: '例) 柳ビル103', class: 'input-default'}
        .registration-form__group
          %label{for: "phone_number"} 電話番号
          %span.optional 任意
          %input{type: "text", name: 'phone_number', placeholder: '例) 09012345678', class: 'input-default'}
        %button{type: 'submit', class: 'registration-form__btn'}
          次へ進む
  = render partial: 'shared/login-footer'

