.header
  .header-inner
    .header-top
      .header-top__logo
        %h1
          = link_to do
            = image_tag 'logo.png', alt: 'mercari', class: 'header-top__logo--size'
      .header-top__form
        %form.top-form
          %input.serch-form{name: 'keyword', placeholder: '何かお探しですか？', type: 'search', value: ''}
          = fa_icon "search", class: 'serch-icon'
    .header-nav
      .header-nav__left
        %ul.nav-list
          %li.category
            %a.category__link{href: '#'}
              ▼カテゴリーから探す
            %ul.nav-parent
              %li.nav-children
                %a.nav-children__link{href: '#'}
                  レディース
              %li.nav-children
                %a.nav-children__link{href: '#'}
                  メンズ
              %li.nav-children
                %a.nav-children__link{href: '#'}
                  ベビー・キッズ
          %li.brand
            %a.brand__link{href: '#'}
              ▼ブランドから探す
            %ul.nav-parent
              %li.nav-children
                %a.nav-children__link{href: '#'}
                  シャネル
              %li.nav-children
                %a.nav-children__link{href: '#'}
                  ナイキ
              %li.nav-children
                %a.nav-children__link{href: '#'}
                  ルイヴィトン
      .header-nav__right
        .nav-login
          %ul.nav-login__list
            %li.register
              %a.register__link{href: '#'}
                新規会員登録
            %li.login
              %a.login__link{href: '#'}
                ログイン
