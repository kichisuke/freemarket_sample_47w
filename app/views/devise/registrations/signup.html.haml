.signup-container
  =render partial: 'shared/login-header'
  .signup
    %h2.signup__head
      新規会員登録
    .signup__inner
      .signup__content
        = link_to registration_path, class: 'signup__mail-btn' do
          = icon 'far', 'envelope', class: 'icon-mail'
          メールアドレスで登録
        = link_to user_facebook_omniauth_authorize_path, class: 'signup__facebook-btn' do
          = icon 'fab', 'facebook-square', class: 'icon-facebook'
          Facebookで登録
        = link_to user_google_oauth2_omniauth_authorize_path, class: 'signup__google-btn' do
          = image_tag 'google-icon.png', class: 'icon-google'
          Googleで登録
  = render partial: 'shared/login-footer'
