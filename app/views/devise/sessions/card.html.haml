    .right-side-card
      .content
        %h2.content-header.bold
          支払い方法
        .content-inner
          %h3.content-inner__header
            クレジットカード一覧 
          - if current_user.creditcard.present?
            %ul
              %li  
                %form{class: "content-inner__main__form"}
                  %figure
                  = card_brand(@card_brand)
                  %br/
                  %br/
                  .content-inner__main__card-info
                    = "**** **** **** " + @card_information.last4
                  .content-inner__main__card-info
                    - exp_month = @card_information.exp_month.to_s
                    - exp_year = @card_information.exp_year.to_s.slice(2,3)
                    = exp_month + " / " + exp_year
                  %div
                    = link_to "削除する", creditcard_path(@card), method: :delete, class: "content-inner__main__button"
          - else
            .content-inner__main__add
              .content-inner__main__add__btn
                = link_to new_creditcard_path, class: "content-inner__main__add__btn" do
                  = icon 'far', 'credit-card'
                  クレジットカードを追加する
          .content-inner__footer
            = link_to "#", class: "content-inner__footer__link" do
              支払い方法について
              = icon 'fas', 'chevron-right', class: 'icon-pay'
